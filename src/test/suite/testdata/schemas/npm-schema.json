{
  "firstProperty": [ "task" ],
  "properties": {
    "task": {
      "pattern": "^Npm@0$",
      "description": "npm\n\nRun an npm command",
      "ignoreCase": "value"
    },
    "inputs": {
      "properties": {
        "cwd": {
          "description": "working folder",
          "type": "string",
          "ignoreCase": "key"
        },
        "command": {
          "description": "npm command",
          "type": "string",
          "ignoreCase": "key"
        },
        "arguments": {
          "description": "arguments",
          "type": "string",
          "ignoreCase": "key"
        }
      },
      "description": "npm inputs",
      "additionalProperties": false,
      "required": ["cwd"]
    }
  },
  "required": ["task", "inputs"]
}